<div id="page-header">
    <ul class="info">
      <li>
      <label>Repo:</label>
      <%= link_to(page.repo.name,
                  af_path(:enter, page.repo),
                  :title => "Back to the top of #{@page.repo.name}") %>
      </li>
      <li>
        <% if page.last_commit -%>
          <label>Last Commit:</label>
          <%= time_ago_in_words(page.last_commit_at) %> ago by
	  <%= git_author(page.last_commit_by) %>
        <% else -%>
	  <label>Untracked</label>
        <% end -%>
      </li>
    </ul>
    <ul class="actions">
      <% if page.last_commit -%>
      <li class="action">
	<%= link_to_remote("history",
                           :url => af_path(:history, page),
                           :html => {:class => 'history', :title => 'view this pages commit history'}) %>
      </li>
      <% end -%>
      <% if logged_in? -%>
      <li class="action">
	<%= link_to_remote("edit",
                           :url => af_path(:edit, page),
                           :html => {:class => 'edit', :title => 'edit the content of this page'}) %>
      </li>
      <li class="action">
	<%= link_to("delete",
                    af_path(:delete, page),
                    :method => :delete,
                    :class => 'delete',
                    :confirm => 'Are you sure you want to irrevocably delete this page?',
                    :title => 'delete this page') %>
      </li>
      <% end -%>
      <li class="action">
	<%= link_to("download",
                    af_path(:download, page, :format => :org),
                    :class => 'download',
                    :title => 'download this page as an Emacs org-mode formatted file') %>
      </li>
    </ul>
</div>
