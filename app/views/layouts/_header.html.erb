<div id="header">
  <div id="Logo">
    <%= link_to("", root_path(), :title => "orGit --- a simple wiki powered by org-mode and git") %>
  </div>

  <div id="flash">
    <% if flash[:error] -%>
    <div id="flash_error"><%= flash[:error] %></div>
    <script type="text/javascript">
      setTimeout("new Effect.Fade('flash_error');", 5000);
    </script>
    <% elsif flash[:notice] -%>
    <div id="flash_notice"><%= flash[:notice] %></div>
    <script type="text/javascript">
      setTimeout("new Effect.Fade('flash_notice');", 5000)
    </script>
    <% end -%>
  </div>
  
  <div id="header-right">
    <div id="user-bar">
      <%= render :partial => "users/user_bar" %>
    </div>
  
    <div id="repo-header-grep">
      <% if @repo -%>
        <%= render(:partial => 'repos/grep_form', :locals => { :repo => @repo }) %>
      <% end -%>
    </div>
  </div>
</div>
<div style="clear:both;"></div>
<hr>
