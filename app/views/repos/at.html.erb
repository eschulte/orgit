<%= render(:partial => 'shared/header', :locals => { :repo => @repo }) %>

<div id="repo-at">
  Files in <%= File.join(@repo.path, @at) %>
  <div class="clear-both"></div>
  <hr>
  <ul class="action">
    <li>
      <%= link_to("up one level",
                  af_path(:at, File.join(@repo.path, @at, "..")),
                  :class => 'up',
                  :title => 'go up one directory level') %>
    </li>
  </ul>

  <div class="clear-both"></div>

  <ul>
    <% @entries.map{|e| File.join(@repo.path, @at, e)}.each do |entry| -%>
    <li>
      <%= link_to(entry, af_path(:at,
                                 (Page.find(entry) or entry),
                                 :dir_p => File.directory?(File.join(Repo.base_directory, entry)))) %>
    </li>
    <% end -%>
  </ul>
</div>
